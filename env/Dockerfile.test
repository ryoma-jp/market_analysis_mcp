FROM python:3.12-slim

ENV LANG=C.UTF-8 \
    LC_ALL=C.UTF-8 \
    TZ=UTC \
    PYTHONUNBUFFERED=1

# System deps for lxml/readability
RUN apt-get update \
 && apt-get install -y --no-install-recommends \
    build-essential \
    libxml2-dev \
    libxslt-dev \
    curl \
 && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install runtime + dev deps
COPY env/requirements.txt /app/env/requirements.txt
COPY env/requirements-dev.txt /app/env/requirements-dev.txt
RUN pip install --no-cache-dir \
    -r /app/env/requirements.txt \
    -r /app/env/requirements-dev.txt

# Copy sources and tests
COPY src /app/src
COPY tests /app/tests

ENV PYTHONPATH=/app

CMD ["pytest", "-q"]
